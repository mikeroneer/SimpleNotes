<Page
    x:Class="SimpleNotes.Views.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleNotes.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding Source={StaticResource Locator}, Path=SettingsViewModel}"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="10">
        <TextBox Header="Read Notes Counter" Text="{Binding NumberOfShownNotes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <CheckBox Content="Show in ascending order" IsChecked="{Binding IsSortAscending, Mode=TwoWay}" />
        <Button Content="Load from local storage" Click="{x:Bind ViewModel.LoadFromStorage}"/>
        <Button Content="Save to local storage" Click="{x:Bind ViewModel.SaveToStorage}"/>
    </StackPanel>
</Page>
