<Page
    x:Class="SimpleNotes.Views.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding Source={StaticResource Locator}, Path=SettingsViewModel}"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="10">
        <TextBox Header="Read Notes Counter" Text="{Binding NumberOfShownNotes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <CheckBox Content="Show in ascending order" IsChecked="{Binding IsSortAscending, Mode=TwoWay}" />
        <Grid>
            <Button Content="Load settings" Click="{x:Bind ViewModel.LoadFromStorage}" HorizontalAlignment="Left"/>
            <Button Content="Save settings" Click="{x:Bind ViewModel.SaveToStorage}" HorizontalAlignment="Right"/>
        </Grid>
        <TextBox Margin="0, 10, 0, 0" Header="Tendant ID" Text="{Binding TenantId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</Page>
